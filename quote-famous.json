const fs = require('fs');
const authors = require('./authors.json').authors;

authors.forEach(author => {
    const pageContent = `
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Discover inspiring quotes from ${author.name}.">
        <title>${author.name} Quotes - Free Daily Motivation</title>
        <link rel="stylesheet" href="style.css">
    </head>
    <body>
        <header>
            <a href="/index.html">Home</a>
            <h1>${author.name}'s Inspirational Quotes</h1>
        </header>
        <div class="content-section">
            <h2>Quotes by ${author.name}</h2>
            <ul>
                ${author.quotes.map(quote => `<li>${quote}</li>`).join('')}
            </ul>
            <a href="/inspirational-quotes-famous.html">Back to all famous quotes</a>
        </div>
        <footer>&copy; 2024 Free Daily Motivation</footer>
    </body>
    </html>`;
    
    const fileName = `inspirational-quotes-famous/${author.name.toLowerCase().replace(/ /g, '-')}.html`;
    fs.writeFileSync(fileName, pageContent);
});

